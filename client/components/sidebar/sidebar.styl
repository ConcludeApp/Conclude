.main-sidebar
  background #F7FAFB
  border-right 1px solid $c-border
  height 100%
  left 0
  padding $padding
  position fixed
  top 0
  transform translateX(-260px)
  transition transform 200ms ease, width 200ms ease
  width 260px
  z-index 12
  .controls
    margin -($padding) -5px $padding
    font-size 12px
    line-height ($padding * 2)
  .flex-row
    align-items center
    img
      vertical-align middle
  .input-group
    margin 0 0 $padding
  .btn
    width 100px
  input
    padding 0 ($padding / 2)
  ul.nav
    list-style none
    margin $padding 0
    padding 0
    li
      font-size 14px
      line-height ($padding + 10)
      &.active
        color $c-blue
  .loading
    top 0
    width 100%
  .search
    position relative
    .icon
      bottom 0
      font-size 10px
      line-height 30px
      position absolute
      right 10px
      top 0
  .project-card
    background-color white
    border 1px solid darken(#EEF1F5, 5%)
    border-radius 2px
    margin 0 0 ($padding / 2)
    padding ($padding / 2) ($padding - 5)
    transition box-shadow 200ms ease
    &:hover
      box-shadow 0 1px 2px 0 rgba(#3F4E5A, 0.2)
    p
      line-height 20px
      margin 0
    span
      color #8CA0B3
      display block
      font-size 10px
      font-weight 600
      letter-spacing 0.1em
      line-height 18px
    &.active
      background-color $c-blue
      border 1px solid transparent
      color white
      span
        display none
  &.show
    animation ShowMainSidebar 200ms ease
    transform translateX(0)
  &.expanded
    width 320px

@keyframes ShowMainSidebar
  0%
    transform translateX(-260px)
  60%
    transform translateX(10px)
  100%
    transform translateX(0)